{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:testing-library/recommended",
    "plugin:jest-dom/recommended",
    "prettier"
  ],
  "plugins": [
    "@typescript-eslint",
    "jest",
    "testing-library",
    "jest-dom",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "@typescript-eslint/no-explicit-any": "off"
  },
  "env": {
    "jest/globals": true
  }
}
