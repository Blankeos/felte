{
  "name": "root",
  "private": true,
  "scripts": {
    "docs:build": "bolt w felte run typedoc --out ../../docs",
    "site:build": "bolt w @felte/site run build",
    "site:start": "bolt w @felte/site run start",
    "site:dev": "bolt w @felte/site run dev",
    "test": "bolt ws run test",
    "test:ci": "bolt ws run test:ci",
    "build": "bolt ws run build --ignore @felte/site",
    "dev": "bolt ws --parallel run dev --ignore @felte/site",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "publish": "yarn build && yarn changeset publish",
    "postpublish": "pinst --enable"
  },
  "devDependencies": {
    "@changesets/changelog-git": "^0.1.6",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@sveltejs/adapter-static": "1.0.0-next.4",
    "@sveltejs/kit": "1.0.0-next.68",
    "@testing-library/dom": "^7.29.4",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/svelte": "^3.0.3",
    "@testing-library/user-event": "^12.6.3",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/lodash-es": "^4.17.4",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "@wessberg/rollup-plugin-ts": "^1.3.8",
    "babel-jest": "^26.6.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-jest-dom": "^3.6.5",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-svelte3": "^3.1.2",
    "eslint-plugin-testing-library": "^3.10.1",
    "front-matter": "^4.0.2",
    "highlight.js": "^10.7.1",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lodash": "^4.17.21",
    "mdsvex": "^0.9.0",
    "pinst": "^2.1.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.0",
    "rollup-plugin-terser": "^7.0.2",
    "superstruct": "^0.15.0",
    "svelte": "^3.31.0",
    "svelte-focus-on": "^0.1.4",
    "svelte-jester": "^1.3.0",
    "svelte-markdown": "^0.1.6",
    "svelte-portal": "^2.1.1",
    "tippy.js": "^6.0.0",
    "ts-jest": "^26.5.0",
    "tslib": "^2.1.0",
    "typedoc": "^0.20.20",
    "typescript": "^4.1.3",
    "vite": "^2.1.2",
    "yup": "^0.32.9",
    "zod": "^1.11.13"
  },
  "bolt": {
    "workspaces": ["packages/*"]
  },
  "volta": {
    "node": "14.15.5",
    "yarn": "1.22.10"
  },
  "dependencies": {
    "@changesets/cli": "^2.14.1",
    "lodash-es": "^4.17.21",
    "rollup-plugin-svelte": "^7.1.0",
    "svelte-preprocess": "^4.6.9"
  }
